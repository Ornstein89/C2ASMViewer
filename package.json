{
  "name": "casmexplorer",
  "displayName": "C-ASM Explorer",
  "description": "Shows ASM result of C code compilation",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:c-asm-explorer.helloWorld"
  ],
  "main": "./out/extension.js",

  
  "contributes": {

    "commands": [
      {
        "command": "c-asm-explorer.openPreviewToTheSide",
        "title": "C ASM Explorer"
      }
    ],

    "viewsContainers": {
      "activitybar": [
        {
          "id": "c-asm-sidebar",
          "title": "C ASM Explorer",
          "icon": "$(book)"
        }
      ]
    },

    "configuration": {
      "title": "C-ASM Explorer",
      "properties": {
        "c-asm-explorer.compiler": {
          "type": "string",
          "default": "MSVC",
          "description": "Compiler.",
          "enum": ["MSVC", "Clang"],
          "enumDescriptions": [
            "Use MSVC compiler",
            "Use Clang compiler"
          ]
        }
      }
    },

    "views": {
      "c-asm-sidebar": [
        {
          "id": "c-asm-configuration",
          "name": "Configuration"
        }
      ]
    },

    "menus": {
      "editor/title": [
        {
          "command": "c-asm-explorer.openPreviewToTheSide",
          "when": "editorLangId == cpp",
          "group": "navigation"
        }
      ]
    },

    "activationEvents": [
      "onLanguage:c",
      "onLanguage:cpp"
    ]
    
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/vscode": "^1.74.0",
    "@types/glob": "^8.0.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "16.x",
    "@typescript-eslint/eslint-plugin": "^5.45.0",
    "@typescript-eslint/parser": "^5.45.0",
    "eslint": "^8.28.0",
    "glob": "^8.0.3",
    "mocha": "^10.1.0",
    "typescript": "^4.9.3",
    "@vscode/test-electron": "^2.2.0"
  }
}
